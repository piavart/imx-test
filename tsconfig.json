{
  // https://www.typescriptlang.org/tsconfig#compilerOptions
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "ES2022",
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "outDir": "dist",
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "esm": true
}
